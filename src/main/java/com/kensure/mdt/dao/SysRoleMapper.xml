<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kensure.mdt.dao.SysRoleMapper"><!--dsName="" saasAspect=""-->
	<!-- <cache readOnly="true"/> -->
    <sql id="allFields">
		id,
		name,
		created_orgid as createdOrgid,
		code,
		level
    </sql>
    
	<sql id="insertFields">
		id,
		name,
		created_orgid,
		code,
		level
    </sql>
	
	<insert id="insert" parameterType="com.kensure.mdt.entity.SysRole">
		insert into sys_role (<include refid="insertFields"/>)
		values (
			#{id},
			#{name},
			#{createdOrgid},
			#{code},
			#{level}
		)
	</insert>	
	
    <sql id="whereClause">
		<if test="name != null">			
			name = #{name}			
		</if>
		<if test="createdOrgid != null">			
			and created_orgid = #{createdOrgid}			
		</if>
		<if test="code != null">			
			and code = #{code}			
		</if>
		<if test="level != null">			
			and level = #{level}			
		</if>
	</sql>
    
	<select id="selectOne" resultType="com.kensure.mdt.entity.SysRole" parameterType="Long" >
		select <include refid="allFields"/> 
		  from sys_role 
		 where id = #{id} 
	</select>
	
	<select id="selectByIds" parameterType="List" resultType="com.kensure.mdt.entity.SysRole">
		select <include refid="allFields"/> from sys_role 
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
	
	<select id="selectCountByWhere" parameterType="Map" resultType="Long">
		select count(*) from sys_role 
		<where>
		    <include refid="whereClause"/>
		</where>
	</select>

	<select id="selectByWhere" parameterType="Map" resultType="com.kensure.mdt.entity.SysRole">
		select <include refid="allFields"/>
		from sys_role 
		<where>
		    <include refid="whereClause"/>
		</where>				
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
		<if test="limit != null">
			LIMIT #{limit} OFFSET #{offset}
		</if>
	</select>
	
	<sql id="setComn">		
		<if test="name != null">
			name = #{name},
		</if>
		<if test="createdOrgid != null">			
			created_orgid = #{createdOrgid},		
		</if>
		<if test="code != null">			
			code = #{code},	
		</if>
		<if test="level != null">			
			level = #{level}
		</if>
	</sql>
	
	<update id="update" parameterType="com.kensure.mdt.entity.SysRole">
		 update sys_role 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<update id="updateByMap" parameterType="Map">
		 update sys_role 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_role where id = #{id}
	</delete>
	
	<delete id="deleteMulti" parameterType="List">
		delete from sys_role
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<delete id="deleteByWhere" parameterType="Map">
		delete from sys_role 
		<where>
		    <include refid="whereClause"/>
		</where>
	</delete>	

</mapper>    
